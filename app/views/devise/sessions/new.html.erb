<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal', role: 'form', novalidate: true }) do |f| %>

    <div class="form-group <%= field_status resource, :email %>">
        <%= f.label :email, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <%= field_status_message resource, :email %>
    </div>

    <div class="form-group <%= field_status resource, :password %>">
        <%= f.label :password, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
            <%= f.password_field :password, class: 'form-control' %>
        </div>
        <%= field_status_message resource, :password %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
    </div>
    <% end %>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            <%= f.submit 'Sign In', class: 'btn btn-primary' %>
            <%= render "devise/shared/links" %>
        </div>
    </div>

  <div></div>
<% end %>


