<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal', role: 'form', novalidate: true }) do |f| %>
    <div class="form-group <%= field_status resource, :name %>">
        <%= f.label :name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
            <%= f.text_field :name, class: 'form-control' %>            
        </div>
        <%= field_status_message resource, :name %>
    </div>

    <div class="form-group <%= field_status resource, :email %>">
        <%= f.label :email, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
            <%= f.email_field :email, class: 'form-control' %>            
        </div>
        <%= field_status_message resource, :email %>
    </div>
        
    <div class="form-group <%= field_status resource, :password %>">
        <%= f.label :password, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>           
        </div>
        <% if resource.errors.has_key? :password %>
            <%= field_status_message resource, :password %>
        <% else %>
            <span class="help-block">Leave blank if you don't want to change it</span>
        <% end %>
    </div>

    <div class="form-group <%= field_status resource, :password_confirmation %>">
        <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>           
        </div>        
        <%= field_status_message resource, :password_confirmation %>
    </div>

    <div class="form-group <%= field_status resource, :current_password %>">
        <%= f.label :current_password, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
            <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control' %>           
        </div>        
        <% if resource.errors.has_key? :current_password %>
            <%= field_status_message resource, :current_password %>
        <% else %>
            <span class="help-block">We need your current password to confirm your changes</span>
        <% end %>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            <%= f.submit "Update", class: 'btn btn-primary btn-sm' %>
            <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-sm' %>
            <%= link_to "Back", :back, class: 'btn btn-warning btn-sm' %>
        </div>
    </div>
<% end %>



