<div class="row">
    <div class="span5">
        <div class="well">
          <%= render partial: "shared/user_small", locals: { user: @user } %>
        </div>
    </div>

    <div class="span10">
        <div class="well">
            <% if @user.config_packs.size > 0 %>
              <%= render partial: "shared/pack_list_short", locals: { pack_collection: @user.config_packs } %>
            <% else %>
              <p>User has contributed no config packs yet.</p>
            <% end %>
        </div>
    </div>
</div>
