<div class="row">
    <div class="col-lg-12">
        <%= form_for [@config_pack, @event_file], html: { class: 'form-horizontal', role: 'form' } do |f| %>

            <div class="form-group <%= field_status @event_file, :name %>">
                <%= f.label :name %> <%= field_status_message @event_file, :name %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group <%= field_status @event_file, :content %>">
                <%= f.label :content %> <%= field_status_message @event_file, :name %>
                <%= f.text_area :content, class: 'form-control', rows: '8' %>
            </div>

            <div class="actions">
                <%= f.submit 'Save', class: 'btn btn-primary' %>
                <%= link_to 'Back', @config_pack, class: "btn btn-warning" %>
            </div>
        <% end %>
    </div>
</div>
